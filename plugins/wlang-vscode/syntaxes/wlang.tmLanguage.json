{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "w",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#type"
        },
        {
            "include": "#function"
        },
        {
            "include": "#constant"
        }
    ],    
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.w",
                    "match": "#.+"
                },
                {
                    "name": "comment.line.w",
                    "begin": "\"\"\"",
                    "end": "\"\"\"",
                    "patterns": [
                        {
                            "name": "comment.line.w",
                            "match": ".|\n"
                        }
                    ]
                }
            ]
        },
        "keyword": {
            "patterns": [
                {
                    "name": "keyword.control.w",
                    "match": "\\b(cst|var|fun|return)\\b"
                }
            ]
        },
        "type": {
            "patterns": [
                {
                    "name": "entity.name.type.w",
                    "match": "\\b(I64|Void)\\b"
                }
            ]
        },    
        "function": {
            "patterns": [
                {
                    "name": "entity.name.function.w",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                },
                {
                    "name": "entity.name.function.w",
                    "match": "_start"
                }
            ]
        },
        "constant": {
            "patterns": [
                {
                    "name": "constant.w",
                    "match": "\\b\\d+\\b"
                },
                {
                    "name": "constant.w",
                    "match": "@([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        }
    },
	"scopeName": "source.w"
}