{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "w",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#annotations"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#function"
        },
        {
            "include": "#constant"
        }
    ],    
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.w",
                    "match": ":[^\n]*"
                }
            ]
        },
        "annotations": {
            "patterns": [
                {
                    "name": "entity.name.type.w",
                    "match": "!\\w+(\\([^)]*\\))?"
                }
            ]
        }, 
        "keyword": {
            "patterns": [
                {
                    "name": "keyword.control.w",
                    "match": "\\b(ret)\\b"
                }
            ]
        },
        "function": {
            "patterns": [
                {
                    "name": "entity.name.function.w",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "constant": {
            "patterns": [
                {
                    "name": "constant.w",
                    "match": "\\b\\d+\\b"
                },
                {
                    "name": "constant.w",
                    "match": "@([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        }
    },
	"scopeName": "source.w"
}